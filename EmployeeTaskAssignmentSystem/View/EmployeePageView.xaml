        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Bottom"
                Content="Search"
                FontFamily="Roboto"
                FontSize="14"
                FontWeight="SemiBold" />
            <TextBox
                Grid.Column="0"
                Width="200"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <Button
            Grid.Column="2"
            Margin="10,20,10,0"
            Command="{Binding OpenEmployeeModelCommand}"
            Content="Add New Employee"
            Style="{StaticResource CustomButtonStyle}" />
        <DataGrid
            Name="EmployeeItemList"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="10,10,10,0"
            VerticalAlignment="Center"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding FilteredEmployees}"
            SelectedItem="{Binding SelectedEmployee}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="40"
                    Binding="{Binding Id}"
                    Header="Id" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="400"
                    Binding="{Binding Email}"
                    Header="Email" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Address}"
                    Header="Address" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Contact}"
                    Header="Contact" />
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="4"
                                    Padding="10,5"
                                    Background="Green"
                                    BorderBrush="Green"
                                    Command="{Binding DataContext.OpenEmployeeModelCommand, RelativeSource={RelativeSource AncestorType={x:Type local:EmployeePageView}}}"
                                    CommandParameter="{Binding}"
                                    Content="Edit"
                                    Foreground="White" />
                                <Button
                                    Margin="4"
                                    Padding="10,5"
                                    Background="Red"
                                    BorderBrush="Red"
                                    Command="{Binding DataContext.DeleteButton, RelativeSource={RelativeSource AncestorType={x:Type local:EmployeePageView}}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete"
                                    Foreground="White" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

