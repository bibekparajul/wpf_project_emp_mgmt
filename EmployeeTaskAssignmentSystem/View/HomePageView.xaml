        <WrapPanel
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Content="Employee Task Assignment System"
                FontFamily="Roboto"
                FontSize="20"
                FontWeight="SemiBold" />
        </WrapPanel>

        <WrapPanel
            Grid.Row="1"
            Height="350"
            Margin="10,10,0,5"
            VerticalAlignment="Top">
            <Border
                Width="200"
                Margin="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel Margin="10" Orientation="Vertical">
                    <fa:ImageAwesome
                        Name="Employee"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Icon="User" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Total Employees" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding TotalEmployees}" />
                </StackPanel>
            </Border>

            <Border
                Width="200"
                Margin="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel Margin="10" Orientation="Vertical">
                    <fa:ImageAwesome
                        Name="Task"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Icon="Tasks" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Roboto"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Total Tasks" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding TotalTasks}" />
                </StackPanel>
            </Border>
            <Border
                Width="200"
                Margin="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel Margin="10" Orientation="Vertical">
                    <fa:ImageAwesome
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Icon="CircleOutlineNotch"
                        Spin="True" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Roboto"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Pending Task" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding PendingTasks}" />
                </StackPanel>
            </Border>
            <Border
                Width="200"
                Margin="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel Margin="10" Orientation="Vertical">
                    <fa:ImageAwesome
                        Name="TaskCompleted"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Icon="Check" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Roboto"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Task Completed" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding DoneTasks}" />
                </StackPanel>
            </Border>

            <Border
                Width="200"
                Margin="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel Margin="10" Orientation="Vertical">
                    <fa:ImageAwesome
                        Name="TaskInprogress"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Icon="Spinner" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Roboto"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Task Inprogress" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding InProgressTasks}" />
                </StackPanel>
            </Border>
        </WrapPanel>
